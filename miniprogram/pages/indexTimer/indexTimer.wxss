.clock {
  /* border: red 2rpx solid; */
  height: 450rpx;
  width: 450rpx;
  display: flex;
  justify-content: center;
  align-items: center;

  box-sizing: border-box;
  border: #66ccff 2rpx solid;
  border-radius: 50%;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}

.show-time {
  font-size: 100rpx;
  /* color: white; */
}

.clock-type {
  display: flex;
  /* border: red 2rpx solid; */
  width: 100%;
  height: 100rpx;
}

.clock-state {
  /* border: red 2rpx solid; */
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.type {
  width: 50%;
  /* border: 2rpx red solid; */
  display: flex;
  justify-content: center;
  align-items: center;
  color: gray;
}
.thisType {
  color: black;
}

.hidden {
  display: none;
}
